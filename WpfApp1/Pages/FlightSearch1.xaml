<Page x:Class="ARS.FlightSearch1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ARS"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="710"
      Title="FlightSearch1">
    
    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="White" CornerRadius="10" BorderBrush="#adadadad" BorderThickness="1">

                            <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
        </Style>
    </Page.Resources>
    
    <Grid Background="#f4f4f8">
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="404*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="206*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="102*"/>
        </Grid.ColumnDefinitions>


            <!--go back button-->
            <Button Width="40" Height="25"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Background="white" BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">

                                        <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal">
                <Image Source="/Images/goBack.png" Width="20" Height="20" Margin="0,0,5,0"/>
            </StackPanel>
            </Button>
        
            <!--airoplane image-->
            <Image Source="/Images/airplane.png"  
                   Grid.Column="1" Grid.ColumnSpan="2"
                   Height="20"/>

            <!-- To code TextBlock-->
            <TextBlock x:Name="FromCode" 
                    FontSize="15" FontWeight="Bold"
                    TextWrapping="Wrap"
                    Text="YYN" TextAlignment="Center"
                    Height="25" Width="43" Grid.Column="1" />
    
             <!-- From code TextBlock-->
             <TextBlock x:Name="ToCode" 
                        FontSize="15" FontWeight="Bold"
                        TextWrapping="Wrap"
                        Text="IND" TextAlignment="Center"
                        Height="25" Width="43" 
                        Grid.Column="2" />

            <!-- User Image-->
            <Image Source="/Images/user.png" Height="13" Grid.Column="3" HorizontalAlignment="Left"/>
    
            <!-- TextBlock for passenger count-->
            <TextBlock x:Name="PassangerCount" Grid.Column="3"
                       FontSize="15" FontWeight="Bold"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left"
                       Text="1" TextAlignment="Center" Height="20" Margin="15"/>


            <!--added button for price sort-->
            <Button Width="90" Height="25"  HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="5" Style="{StaticResource RoundedButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="PRICE" VerticalAlignment="Center"/>
                    <Image Source="/Images/price_keys.png" Width="20" Height="20" Margin="0,0,5,0"/>

                </StackPanel>
            </Button>
        
            <!--added button for time sort-->
            <Button Width="90" Height="25"  HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="6" Style="{StaticResource RoundedButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="TIME" VerticalAlignment="Center"/>
                    <Image Source="/Images/price_keys.png" Width="20" Height="20" Margin="0,0,5,0"/>

                </StackPanel>
            </Button>
        
            <ScrollViewer Grid.Column="0" Grid.ColumnSpan="7" Grid.Row="3">
                <StackPanel x:Name ="flightStack">
                    <!--<local:FlightDetailsTag Margin="0,0,0,10" />
                    <local:FlightDetailsTag Margin="0,0,0,10" />-->
                </StackPanel>
            </ScrollViewer>

    </Grid>

</Page>
