<Page x:Class="WpfApp1.Pages.FlightSearch1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="710"
      Title="FlightSearch1">
    <Grid Background="white">
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="404*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="206*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="102*"/>


        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="6" Grid.RowSpan="1" Margin="0,0,73,0">
            <Grid VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!--from and to-->
                <TextBlock x:Name="FromCode" Grid.Column="0"
                    FontSize="15" FontWeight="Bold"
                    TextWrapping="Wrap"
                    Text="YYN" TextAlignment="Center"
                    Height="27" Width="60" />
                <Image Source="/Images/airplane.png" Stretch="Fill" Margin="0,12,58,14" RenderTransformOrigin="1.05,1.152" Grid.Column="1"/>
                <TextBlock x:Name="ToCode" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                    FontSize="15" FontWeight="Bold"
                    TextWrapping="Wrap"
                    Text="YYN" TextAlignment="Center"
                    Height="27" Width="60"  />
                <!--design for date-->
                

                <TextBlock x:Name="Date" Grid.Column="6" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                  FontSize="15" FontWeight="Bold"
                  TextWrapping="Wrap"
                  Text="erasdasdasdasdsadasdasd" TextAlignment="Center"
                  Height="27" Width="60"  />
            </Grid>
            
        </Border>


    </Grid>
